{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".svelte-kit/**", "dist/**", ".build/**", ".vercel/**"]
		},
		"lint": {
			"cache": false,
			"inputs": ["**/*.{ts,tsx,js,jsx,svelte,md,json}"]
		},
		"check": {
			"cache": false,
			"inputs": ["**/*.{ts,tsx,js,jsx,svelte,md,json}"]
		},
		"format": {
			"cache": false,
			"inputs": ["**/*.{ts,tsx,js,jsx,svelte,md,json}"]
		},
		"format:check": {
			"cache": false,
			"inputs": ["**/*.{ts,tsx,js,jsx,svelte,md,json}"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
